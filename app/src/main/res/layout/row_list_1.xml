<?xml version="1.0" encoding="utf-8"?>
<com.github.captain_miao.optroundcardview.OptRoundCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="10dp"
    app:optRoundCardCornerRadius="20dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_row_home_cover_4"
        android:padding="2dp"
        tools:layout_marginEnd="@dimen/green_dark">


        <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/drawee_row_home_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:roundedCornerRadius="20dp"
                app:placeholderImageScaleType="fitCenter"
                app:overlayImage="@drawable/gredient_overlay_4"
                 />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="40dp">

            <!--<com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/drawee_row_category_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                app:viewAspectRatio="1" />
-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_row_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/full_names"
                tools:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </RelativeLayout>
</com.github.captain_miao.optroundcardview.OptRoundCardView>