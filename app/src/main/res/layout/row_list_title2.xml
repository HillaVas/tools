<?xml version="1.0" encoding="utf-8"?>


<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="vertical"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_margin="5dp"
app:cardElevation="10dp"
app:optRoundCardBackgroundColor="@color/colorTransparent"
app:optRoundCardCornerRadius="20dp">


    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/bg_row_home_cover_4"
    android:padding="2dp"
    tools:layout_marginEnd="@dimen/green_dark">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/drawee_row_home_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:overlayImage="@drawable/gredient_overlay_4"
        app:placeholderImageScaleType="fitCenter"
        app:roundedCornerRadius="20dp"
        app:viewAspectRatio="1.3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingLeft="40dp">

            <!--<com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/drawee_row_category_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                app:viewAspectRatio="1" />
-->
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_row_item_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@android:color/black"
                tools:text="@tools:sample/full_names"
                tools:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>

        </LinearLayout>


</RelativeLayout>
    <!--<TextView
        android:layout_width="fill_parent"
