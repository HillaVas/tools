<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="20dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.content.ContentTipActivity"
    tools:showIn="@layout/activity_content_tip">

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/green_dark"
        android:layout_marginStart="@dimen/green_dark"
        app:optRoundCardCornerRadius="15dp"
        app:optRoundCardLeftBottomCorner="false"
        app:optRoundCardRightBottomCorner="false">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_amlak_row1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="8dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/linier_amlak_rahn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/bg_edittext_grey"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:text="رهن و اجاره"
                        android:textSize="22sp"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linier_amlak_kharid"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="@drawable/bg_edittext_dark"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:text="خرید و فروش"
                        android:textSize="22sp"
                        android:textColor="@color/colorBlack"/>

                </LinearLayout>





            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.80"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_amlak_row2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="8dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/txt_amlak_lbl1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:text="رهن"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="right"
                        android:background="@drawable/bg_edittext_grey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="5dp"
                            android:text="تومان"
                            android:textSize="16sp"
                            android:textColor="@color/browser_actions_title_color"/>


                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/edt_amlak_row1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:hint="....................................."
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/browser_actions_title_color"
                            android:textSize="14sp"
                            android:paddingRight="4dp"
                            android:background="@null"
                            android:layout_gravity="right"
                            />



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/txt_amlak_lbl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="16dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="right"
                        android:background="@drawable/bg_edittext_grey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="5dp"
                            android:text="تومان"
                            android:textSize="16sp"
                            android:textColor="@color/browser_actions_title_color"/>


                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/edt_amlak_row2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:hint="....................................."
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/browser_actions_title_color"
                            android:textSize="14sp"
                            android:paddingRight="4dp"
                            android:background="@null"
                            android:layout_gravity="right"
                            />



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_amlak_row4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingRight="70dp"
                    android:paddingLeft="70dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/txt_amlak_lbl3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:text="درصد"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="8dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:gravity="right"
                        android:background="@drawable/bg_edittext_grey">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="4dp"
                            android:paddingRight="5dp"
                            android:text="%"
                            android:textSize="16sp"
                            android:textColor="@color/browser_actions_title_color"/>


                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/edt_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:hint=""
                            android:inputType="number"
                            android:maxLines="1"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/browser_actions_title_color"
                            android:textSize="14sp"
                            android:paddingRight="4dp"
                            android:background="@null"
                            android:layout_gravity="right"
                            />



                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="0.40"
                    android:paddingRight="70dp"
                    android:paddingLeft="70dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@drawable/bg_layout_border_gray">

                        <LinearLayout

                            android:id="@+id/layout_amlak_mohasebe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edittext_yelow"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/txt_amlak_lbl4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="16dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:text="محاسبه"
                                android:textSize="20sp"
                                android:textColor="@color/browser_actions_bg_grey"
                                android:gravity="center"/>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:background="@drawable/bg_layout_border_gray"
                        android:layout_marginTop="4dp">

                        <LinearLayout
                            android:id="@+id/layout_amlak_hasel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_edittext_yelow"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="16dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:hint="..................."
                                android:textColorHint="@color/browser_actions_bg_grey"
                                android:textSize="20sp"
                                android:textColor="@color/browser_actions_bg_grey"
                                android:gravity="center"/>

                        </LinearLayout>



                    </LinearLayout>



                </LinearLayout>


            </LinearLayout>





        </LinearLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>

</android.support.constraint.ConstraintLayout>
