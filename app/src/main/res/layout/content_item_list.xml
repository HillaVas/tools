<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_item_list">

    <com.github.captain_miao.optroundcardview.OptRoundCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/green_dark"
        android:layout_marginStart="@dimen/green_dark"
        android:layout_marginTop="140dp"
        app:optRoundCardCornerRadius="15dp"
        app:optRoundCardLeftBottomCorner="false"
        app:optRoundCardRightBottomCorner="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/blue_light">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_row_video_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/green_dark"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal"
                app:fontFamily="@font/shabnam_fd"
                tools:text="@tools:sample/full_names" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/blue_light" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_video_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </com.github.captain_miao.optroundcardview.OptRoundCardView>


</RelativeLayout>